@{
  Layout = "_Layout";
}
 @using Factory.Models;
<h1>Welcome to Dr SillyStringz Factory</h1>

<hr>

<h4>Engineers</h4>
@if (Model["engineers"].Length == 0)
{
  <p>No engineers have been added yet!</p>
} 
<ul>
  @foreach (Engineers eng in Model["engineers"])
  {
    <li>@Html.ActionLink(@eng.Name, "Details", "Engineers", new { id = @eng.EngineersId})</li>
  }
</ul>

<h4>Machines</h4>
@if (Model["machines"].Length == 0)
{
  <p>No Machines have been added yet!</p>
} 
<ul>
  @foreach (Machine machine in Model["machines"])
  {
    <li>@Html.ActionLink(@machine.Description, "Details", "Machines", new { id = @Machine.machineId})</li>
  }
</ul>

<hr>
<p>@Html.ActionLink("See all Engineers", "Index", "Engineers")</p> 
<p>@Html.ActionLink("See all Machines", "Index", "Machines")</p>