@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;
@using Factory.Models;
@using System.Collections.Generic;

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if ( Model.JoinEntities == null || Model.JoinEntities.Count == 0)
{
  <p>This machine isnt maintained by any engineers.</p>
}
else
{
  <h4>engineers on this machine:</h4>
  <ul>
    @foreach (EngineerMachine joinEntity in Model.JoinEntities)
    {
      Engineer engineer = joinEntity.Engineer;
      <li>@engineer.Name</li>
    }
  </ul>
}


<p>@Html.ActionLink("Back to Machines", "Index")</p>
<p>@Html.ActionLink("Add new Machine", "Create", "Machines")</p>